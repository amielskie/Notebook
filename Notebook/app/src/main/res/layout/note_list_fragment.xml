<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/listViewColor">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a"
        android:id="@+id/listItemNoteImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/listItemNoteTitle"
        android:text="Note Title"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/listItemNoteImg"
        android:paddingTop="3dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:id="@+id/listItemNoteMessage"
        android:text="This is a sample text from thim note so don't worry"
        android:layout_toEndOf="@id/listItemNoteImg"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/listItemNoteTitle"
        android:paddingTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"/>

</RelativeLayout>
